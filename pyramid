#include <stdio.h>

int main()
{   
    int num,c;
    printf("Enter  A Number : ");
    scanf("%d",&num);
    c=num-1;
    for(int i = 1; i <= num; i++){
        for(int k =1; k<=c; k++){
            printf(" ");
        }
        for(int j = 1; j<=i; j++){
          printf("*");
          printf(" ");
        }
    printf("\n");
    c--;
}
    return 0;
}
//
